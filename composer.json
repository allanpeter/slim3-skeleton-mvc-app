{
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.0",
        "cfs/authenticator": "^1.0",
        "katzgrau/klogger": "dev-master"
    },
    "require-dev": {
        "php": ">=5.5.0",
        "devster/ubench": "^1.1",
        "digitalnature/php-ref": "^1.0"
    },
    "autoload": {
        "classmap": [ "src/", "tests/", "vendor/slim/", "lib/" ],
        "files": ["lib/helper-functions.php"]
    },
    "scripts": {
        "post-install-cmd": [
            "php ./s3mvc-tools/post-composer-install.php"
        ]
    },
    "suggest": {
        "rotexsoft/leanorm": "An efficient light-weight ORM for database access. See http://rotexsoft.github.io/leanorm/"
    }
}
